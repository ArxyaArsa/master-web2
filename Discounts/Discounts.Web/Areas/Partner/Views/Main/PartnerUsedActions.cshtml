@model IEnumerable<UsedActionViewModel>

@{
    ViewData["Title"] = "Actions";
    int r = 0;
}

<h2>Partner - @ViewData["PartnerName"]</h2>

<div>
    <a href="@Url.Action("Index", "Main", new { area = "Partner" })">Back to Partner Home</a>
</div>

<br />

<table class="table" data-id="usedActionsTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.ActionName)</th>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.ActionValue)</th>
            <th>@Html.DisplayNameFor(model => model.OriginalValue)</th>
            <th>@Html.DisplayNameFor(model => model.DateCreated)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr class="category-row @(r++ % 2 == 1 ? "odd" : "even")" data-category-id="@(item.Id)">
            <td>@Html.DisplayFor(modelItem => item.ActionName)</td>
            <td>@Html.DisplayFor(modelItem => item.UserName)</td>
            <td>@Html.DisplayFor(modelItem => item.ActionValue)</td>
            <td>@Html.DisplayFor(modelItem => item.OriginalValue)</td>
            <td>@Html.DisplayFor(modelItem => item.DateCreated)</td>
        </tr>
        }
    </tbody>
</table>

<script src="~/js/Partner/PartnerUsedActions.js" type="text/javascript"></script>