@model IEnumerable<ViewByCategoryModel>

@{
    ViewData["Title"] = "Categories";
    int r = 0;
}

<h2>Categories</h2>

<table class="table" data-id="categoriesTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.PartnerCount)</th>
            <th>@Html.DisplayNameFor(model => model.ActionCount)</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr class="category-row @(r++ % 2 == 1 ? "odd" : "even")" data-category-id="@(item.Id)">
            <td><a href="@Url.Action("ViewByPartner", "Main", new { area = "User", id = item.Id })">@Html.DisplayFor(modelItem => item.Name)</a></td>
            <td>@Html.DisplayFor(modelItem => item.PartnerCount)</td>
            <td>@Html.DisplayFor(modelItem => item.ActionCount)</td>
        </tr>
}
    </tbody>
</table>

<script src="~/js/User/ViewByCategory.js" type="text/javascript"></script>