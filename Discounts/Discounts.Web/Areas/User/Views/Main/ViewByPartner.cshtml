@model IEnumerable<Discounts.Web.Areas.User.Models.ViewByPartnerModel>

@{
    ViewData["Title"] = "Partners";
    int r = 0;
}

<h2>Category - @ViewData["CategoryName"]</h2>

<div>
    <a asp-action="Index">[Categories]</a> ->
    [Category - @ViewData["CategoryName"]]
</div>

<br />

<table class="table" data-id="partnersTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.ActionCount)</th>
            <th>@Html.DisplayNameFor(model => model.UsedActionCount)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="category-row @(r++ % 2 == 1 ? "odd" : "even")" data-category-id="@(item.Id)">
                <td><a href="@Url.Action("ViewByAction", "Main", new { area = "User", id = item.Id })">@Html.DisplayFor(modelItem => item.Name)</a></td>
                <td>@Html.DisplayFor(modelItem => item.ActionCount)</td>
                <td>@Html.DisplayFor(modelItem => item.UsedActionCount)</td>
            </tr>
        }
    </tbody>
</table>

<script src="~/js/User/ViewByPartner.js" type="text/javascript"></script>