@{
    var controllerName = this.ViewContext.RouteData.Values["controller"]?.ToString();
    var list = new[]
{
        new { Controller="Users", Action="Index", Text="Users" },
        new { Controller="Partners", Action="Index", Text="Partners" },
        new { Controller="PartnerTypes", Action="Index", Text="Partner Types" },
        new { Controller="Actions", Action="Index", Text="Actions" },
        new { Controller="PartnerActionMap", Action="Index", Text="Partner Action Map" },
        new { Controller="UsedActions", Action="Index", Text="Used Actions" },
    };
}

@foreach(var e in list)
{
    <text>
    <li><a asp-area="Admin" asp-controller="@e.Controller" asp-action="@e.Action" class="@(e.Controller == controllerName ? "activeSubMenu" : "")">@e.Text</a></li>
    </text>
}
