@{
    var controllerName = this.ViewContext.RouteData.Values["controller"]?.ToString();
    var list = new[]
    {
        new { Controller = "Main", Action = "Index", Text = "Partner Home" },
        new { Controller = "Main", Action = "LogActionUse", Text = "Log Action Use" },
    };
}

@foreach(var e in list)
{
<text>
    <li><a asp-area="Partner" asp-controller="@e.Controller" asp-action="@e.Action" class="@(e.Controller == controllerName ? "activeSubMenu" : "")">@e.Text</a></li>
</text>
}
